            if ( window.history.replaceState ) {
            window.history.replaceState( null, null, window.location.href );
            }
        </script>
    <title>LOG IN</title>
</head>

<body>
    <% if(flag==1) {%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Incorrect username or password
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
    <div class="container d-flex align-content-center">
        <div class="center col-sm-12 offset-sm-2 offset-md-4 shadow rounded">
            <h2 style="color: #75c25a   ;">LOG IN</h2>
            <form action="/login" method="POST" id="form">
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <input type="text" class="form-control int" id="username" name="username"
                            placeholder="Username">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-10">
                        <input type="password" class="form-control int" id="inputPassword3" name="password"
                            placeholder="Password">
                    </div>
                </div>

                <button type="submit" class="btn btn-success log">Log in</button>
            </form>
        </div>
    </div>
            <style>
                * {
                    padding: none;
                    margin: none;
                }

                body {
                    background-color: #75c25a;
                }

                .center {
                    width: 464px;
                    height:241px;;
                    background-color: #ffffff;
                    padding: 32px;
                    border-radius: 5px;
                }

                .int {
                    border: none;
                    background-color: #f2f2f2;
                    outline: none;
                    width: 400px;
                }

                .log {
                    position: relative;
                    left: 161px;
                    top: 10px;
                }

                .center {
                    margin-top: 200px;
                }
            </style>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
            <script src="./js/validation.js"></script>
</body>

</html>